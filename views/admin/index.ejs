<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>Coacher</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="icon" type="image/ico" href="images/logo.ico"/>
        <link rel="stylesheet" href="../css/style.css"/>
        <link rel="stylesheet" href="../css/fontawesome.css"/>

        <style>
            body {
                background-color: #f0f0f0;
            }
        </style>

    </head>

    <%
        var exercisesNum = 0;

        var dates = new Map();
        for(var i = 0; i < exercises.length; i++) {
            dates.set(moment(exercises[i].date).format('L'), true);
        }

        for(var i = 1; i <= 7; i++) {
            if(dates.has(moment().startOf('week').add(i,'days').format('L'))) exercisesNum++;
        }
    %>

    <body>

        <div id="modal" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="modalText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand navbar-light pt-5 pb-5 px-xl-3">
            <div class="container d-flex justify-content-between">
                <img class="mr-2" src="../images/logo_colored.svg" width="40" height="40">
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <div class="d-flex mr-3 mt-1" style="width: auto; height: 30px;">
                            <p class="text-left ml-2">Hello,</p>
                            <p class="ml-1 text-left cabrion-bold"><%=name%></p>
                        </div>
                    </li>
                    <li class="nav-item mr-3">
                        <a href="user" role="button"><i class="far fa-user fa-lg"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="user/logout" role="button"><i class="far fa-sign-out-alt fa-lg"></i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold">Admin panel</h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <p class="text-left">Welcome to admin panel!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold">Exercises</h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <td>Image</td>
                                            <td>Name</td>
                                            <td>Difficulty</td>
                                            <td>ID</td>
                                            <td>Actions</td>
                                        </tr>
                                            <% for(var i in exercises) { %>
                                                <tr>
                                                    <td>
                                                        <img class="square-container" src='data:image/png;base64,<%=exercises[i].image%>' width="100" height="100">
                                                    </td>
                                                    <td><%=exercises[i].name%></td>
                                                    <td><%=exercises[i].difficulty%></td>
                                                    <td><%=exercises[i].id%></td>
                                                    <td>
                                                        <button onclick="editExercise('<%=JSON.stringify(exercises[i])%>')" class="btn" role="button" type="submit"><i class="fas fa-cog text-primary"></i></button> 
                                                        <button onclick="removeExercise('<%=exercises[i].id%>')" class="btn" role="button" type="submit"><i class="fas fa-times text-danger"></i></button> 
                                                    </td>
                                                </tr>
                                            <% } %>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold">Add exercise</h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md">
                                <form class="form">
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-signature"></i></div>
                                        </div>
                                        <input id="name" type="text" class="form-control custom-input" placeholder="Name">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2  mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-bolt"></i></div>
                                        </div>
                                        <input id="difficulty" type="text" class="form-control custom-input" placeholder="Difficulty">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2  mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-image"></i></div>
                                        </div>
                                        <input id="image" type="text" class="form-control custom-input" placeholder="Image">
                                    </div>
    
                                    <div class="buttons-container">
                                        <button id="exerciseSubmit" class="custom-btn btn-purple mt-3 btn1" role="button" type="submit"><i class="far fa-plus"></i> Add exercise</button> 
                                    </div>
                                
                                </form>
                            </div>
                            <div class="col-md justify-content-center align-self-center text-center">
                                <ol class="pl-0" type="none">
                                    <li>
                                        • Name must have maximum 20 charcters •
                                    </li>
                                    <li>
                                        • Difficulty can be 1, 2 or 3 •
                                    </li>
                                    <li>
                                        • Image is base64 string (<a href="https://codebeautify.org/image-to-base64-converter" target="_">Converter</a>) •
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="editExercise" class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold">Edit exercise</h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md">
                                <form class="form">
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-id-card"></i></div>
                                        </div>
                                        <input id="editID" type="text" class="form-control custom-input" placeholder="ID">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-signature"></i></div>
                                        </div>
                                        <input id="editName" type="text" class="form-control custom-input" placeholder="Name">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2  mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-bolt"></i></div>
                                        </div>
                                        <input id="editDifficulty" type="text" class="form-control custom-input" placeholder="Difficulty">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2  mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-image"></i></div>
                                        </div>
                                        <input id="editImage" type="text" class="form-control custom-input" placeholder="Image">
                                    </div>
    
                                    <div class="buttons-container">
                                        <button id="editExerciseSubmit" class="custom-btn btn-purple mt-3 btn1" role="button" type="submit"><i class="far fa-edit"></i> Edit exercise</button> 
                                        <button id="editExerciseClear" class="custom-btn btn-silver mt-3" role="button" type="submit"><i class="far fa-broom"></i> Clear</button> 
                                        
                                    </div>
                                
                                </form>
                            </div>
                            <div class="col-md justify-content-center align-self-center text-center">
                                <ol class="pl-0" type="none">
                                    <li>
                                        • Name must have maximum 20 charcters •
                                    </li>
                                    <li>
                                        • Difficulty can be 1, 2 or 3 •
                                    </li>
                                    <li>
                                        • Image is base64 string (<a href="https://codebeautify.org/image-to-base64-converter" target="_">Converter</a>) •
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="container pt-5">
            <p class="text-center">Coacher © 2021</p>
        </section>

        <!-- move top -->
        <button onclick="topFunction()" id="movetop" class="custom-btn btn-purple" title="Go to top"><i class="fas fa-angle-up"></i></button>

        <script type="text/javascript">
            function removeExercise(id) {
                $.ajax({
                    url: '/admin/exercise/remove',
                    type: 'POST',
                    cache: false,
                    data: {
                        id: id
                    }, 
                    success: function(data){
                        if (data.redirect) window.location.href = data.redirect;
                    },
                    error: function(jqXHR, textStatus, err) {
                        $("#modal").modal();
                        $("#modalTitle").html("Error");
                        $("#modalText").html(JSON.parse(jqXHR.responseText).message);
                    }
                });
            }
        </script>

        <script>
            // When the user scrolls down 20px from the top of the document, show the button
            window.onscroll = function () {
                scrollFunction()
            };
            
            function scrollFunction() {
                if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                    document.getElementById("movetop").style.display = "block";
                }
                else {
                    document.getElementById("movetop").style.display = "none";
                }
            }
            
            // When the user clicks on the button, scroll to the top of the document
            function topFunction() {
                document.body.scrollTop = 0;
                document.documentElement.scrollTop = 0;
            }

            // When the user click on button "Let's Begin"
            function ScrollExercise(id) {
                document.getElementById(id).scrollIntoView(true);
            }

            function editExercise(objs) {
                var obj = JSON.parse(objs);
                document.getElementById("editID").value = obj._id;
                document.getElementById("editName").value = obj.name;
                document.getElementById("editDifficulty").value = obj.difficulty;
                document.getElementById("editImage").value = obj.image;

                document.getElementById('editExercise').scrollIntoView();
            }
        </script>

        <!-- Bootstrap -->
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    
        <script type="text/javascript">
            $(document).ready(function() {
                $('#exerciseSubmit').click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: '/admin/exercise/add',
                        type: 'POST',
                        cache: false,
                        data: { 
                            name: document.getElementById("name").value,
                            diff: document.getElementById("difficulty").value,
                            image: document.getElementById("image").value
                        }, 
                        success: function(data){
                            if (data.redirect) window.location.href = data.redirect;
                            else {
                                $("#modal").modal();
                                $("#modalTitle").html("Error");
                                $("#modalText").html(JSON.parse(jqXHR.responseText).message);
                            }
                        },
                        error: function(jqXHR, textStatus, err) {
                            $("#modal").modal();
                            $("#modalTitle").html("Error");
                            $("#modalText").html(JSON.parse(jqXHR.responseText).message);
                        }
                    });
                });

                $('#editExerciseSubmit').click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: '/admin/exercise/edit',
                        type: 'POST',
                        cache: false,
                        data: { 
                            id: document.getElementById("editID").value,
                            name: document.getElementById("editName").value,
                            diff: document.getElementById("editDifficulty").value,
                            image: document.getElementById("editImage").value
                        }, 
                        success: function(data){
                            if (data.redirect) window.location.href = data.redirect;
                            else {
                                $("#modal").modal();
                                $("#modalTitle").html("Error");
                                $("#modalText").html(JSON.parse(jqXHR.responseText).message);
                            }
                        },
                        error: function(jqXHR, textStatus, err) {
                            $("#modal").modal();
                            $("#modalTitle").html("Error");
                            $("#modalText").html(JSON.parse(jqXHR.responseText).message);
                        }
                    });
                });

                $('#editExerciseClear').click(function(event) {
                    event.preventDefault();

                    document.getElementById("editID").value = document.getElementById("editName").value = document.getElementById("editDifficulty").value = document.getElementById("editImage").value = "";
                });
            });
        </script>

    
    </body>

</html>