<!doctype html>
<html>
    <head>
        
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title><%=langText.projectName%> - <%=langText.settings%></title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="icon" type="image/ico" href="images/logo.ico"/>
        <link rel="stylesheet" href="/css/style.css"/>
        <link rel="stylesheet" href="/css/fontawesome.css"/>

        <style>
            body {
                background-color: #f0f0f0;
            }
        </style>

    </head>

    <body>
        <div id="modal" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="<%=langText.button_close%>">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="modalText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%=langText.button_close%></button>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand navbar-light pt-5 pb-5 px-xl-3">
            <div class="container d-flex justify-content-between">
                <a href="/"><img class="mr-2" src="/images/logo_colored.svg" width="40" height="40"></a>
                <ul class="navbar-nav ml-auto align-items-center">
                    <li class="nav-item">
                        <div class="d-flex mr-3 mt-1" style="width: auto; height: 30px;">
                            <p class="text-left ml-2"><%=langText.hello%>,</p>
                            <p class="ml-1 text-left cabrion-bold"><%=name%></p>
                        </div>
                    </li>
                    <li class="nav-item mr-3">
                        <a href="/user" role="button"><i class="far fa-user fa-lg"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/user/logout" role="button"><i class="far fa-sign-out-alt fa-lg"></i></a>
                    </li>
                </ul>
            </div>
        </nav>


        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold"><%=langText.settings%></h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <p class="text-left"><%=langText.settings_desc%></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="col-md panel-container w-100 m-2">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold"><%=langText.account_settings%></h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <form class="form">
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                                        </div>
                                        <input id="email" type="text" class="form-control custom-input" placeholder="<%=langText.email%> (<%=email%>)" readonly>
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                        </div>
                                        <input id="newPassword" type="password" class="form-control custom-input" placeholder="<%=langText.npassword%>">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-unlock"></i></div>
                                        </div>
                                        <input id="confirmNewPassword" type="password" class="form-control custom-input" placeholder="<%=langText.cnpassword%>">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                        </div>
                                        <input id="oldPassword" type="password" class="form-control custom-input" placeholder="<%=langText.opassword%>">
                                    </div>
                                    <div class="text-center">
                                        <button id="submitPassword" class="custom-btn btn-purple btn1 mt-2" role="button" type="submit"><i class="fas fa-save"></i> <%=langText.save%></button> 
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md panel-container w-100 m-2">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-left cabrion-bold"><%=langText.profile_settings%></h3>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <form class="form">
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-user"></i></div>
                                        </div>
                                        <input id="name" type="text" class="form-control custom-input" placeholder="<%=langText.yourname%> (<%=name%>)">
                                    </div>
                                    <div class="input-group mb-2 mr-sm-2 mt-3">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                        </div>
                                        <input id="weekGoal" type="text" class="form-control custom-input" placeholder="<%=langText.weekgoal%> (<%=weekGoal%>)">
                                    </div>
                                    <div class="text-center">
                                        <button id="submitProfile" class="custom-btn btn-purple btn1 mt-2" role="button" type="submit"><i class="fas fa-save"></i> <%=langText.save%></button> 
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="container pt-5">
            <p class="text-center"><%=langText.copyright%></p>
        </section>

        <!-- move top -->
        <button onclick="topFunction()" id="movetop" class="custom-btn btn-purple" title="<%=langText.gotop%>"><i class="fas fa-angle-up"></i></button>
        <script src="/js/scroll.js"></script>

        <script type="text/javascript">
            function StartExercise(id) {
                document.getElementById(id).scrollIntoView(true);
            }
        </script>

        <!-- Bootstrap -->
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    
        <script type="text/javascript">
            $(document).ready(function() {
                $('#submitPassword').click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: '/user/changepass',
                        type: 'POST',
                        cache: false,
                        data: { 
                            password: document.getElementById("newPassword").value,
                            cpassword: document.getElementById("confirmNewPassword").value,
                            oldpassword: document.getElementById("oldPassword").value
                        }, 
                        success: function(data) {
                            if (data.redirect) window.location.href = data.redirect;
                            else {
                                $("#modalTitle").html("<%=langText.successfully%>");
                                $("#modalText").html(data.message);
                                $("#modal").modal();
                            }
                        },
                        error: function(jqXHR, textStatus, err) {
                            $("#modalTitle").html("<%=langText.error%>");
                            switch(jqXHR.status) {
                                case 405:
                                    $("#modalText").html("<%=langText.user405%>");
                                    break;
                                case 406:
                                    $("#modalText").html("<%=langText.user406%>");
                                    break;
                                case 407:
                                    $("#modalText").html("<%=langText.user407%>");
                                    break;
                                case 408:
                                    $("#modalText").html("<%=langText.user408%>");
                                    break;
                                default:
                                    $("#modalText").html("<%=langText.error%>");
                            }
                            $("#modal").modal();
                        }
                    });
                });

                $('#submitProfile').click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: '/user/changeprofile',
                        type: 'POST',
                        cache: false,
                        data: { 
                            name: document.getElementById("name").value,
                            weekGoal: document.getElementById("weekGoal").value
                        }, 
                        success: function(data) {
                            console.log(data.message);
                            if (data.redirect) window.location.href = data.redirect;
                            else {
                                $("#modalTitle").html("<%=langText.successfully%>");
                                $("#modalText").html(data.message);
                                $("#modal").modal();
                            }
                        },
                        error: function(jqXHR, textStatus, err) {
                            $("#modalTitle").html("<%=langText.error%>");

                            switch(jqXHR.status) {
                                case 401:
                                    $("#modalText").html("<%=langText.user401%>");
                                    break;
                                case 402:
                                    $("#modalText").html("<%=langText.user402%>");
                                    break;
                                case 403:
                                    $("#modalText").html("<%=langText.user403%>");
                                    break;
                                case 411:
                                    $("#modalText").html("<%=langText.user411%>");
                                    break;
                                default:
                                    $("#modalText").html("<%=langText.error%>");
                            }
                            $("#modal").modal();
                        }
                    });
                });
            });
        </script>
    </body>
</html>