        <section class="container pt-5 shadow-2">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="panel-container w-100">
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-12">
                                        <h3 class="text-left cabrion-bold"><%=exercise.name%></h3>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <p class="text-left cabrion-bold">
                                            <% if(exercise.difficulty == 1) { %><i class="far fa-bolt"></i> Beginner
                                            <% } else if(exercise.difficulty == 2) { %><i class="far fa-bolt"></i> <i class="far fa-bolt"></i> Advanced
                                            <% } else if(exercise.difficulty == 3) { %><i class="far fa-bolt"></i> <i class="far fa-bolt"></i> <i class="far fa-bolt"></i> Intermediate <% } %>
                                            <br/>
                                            <i class="far fa-stopwatch"></i> <%=exercise.timeRequired%>min &nbsp;
                                            <i class="far fa-fire"></i> <%=exercise.kcal%>kcal
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="col text-right">
                                    <img class="square-container" src='<%=exercise.image%>' width="100" height="100">
                                </div>
                            </div>
