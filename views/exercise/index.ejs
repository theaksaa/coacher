            </div>
        </section>

        <section class="container shadow-2 mt-5">
            <div class="pl-5 pr-5">
                <div class="row">
                    <div class="w-100">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <button onclick="ExerciseClick()" id="startExercise" class="custom-btn btn-purple btn1" role="button" type="submit"><i class="far fa-play"></i> Start exercise</button> 
                            </div>
                        </div>
